@model List<HandsOnAssignment.Models.Product>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Pid</td>
                <td>@item.Pname</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
            </tr>
        }
    </table>
    <a href="Create">Add Data</a>
</div>